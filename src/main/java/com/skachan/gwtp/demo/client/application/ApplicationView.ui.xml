<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

    <g:HTMLPanel>
        <div>
            <p>
                <strong>Please enter your name:</strong>
            </p>
            <g:TextBox ui:field="nameField"/>
            <g:Button ui:field="sendButton">Submit</g:Button>
            <g:HTML ui:field="error"/>
            <g:SplitLayoutPanel ui:field="layout" width="800px" height="500px">
                <g:north size="300">
                    <b:DataGrid ui:field="dataGrid" height="300px" striped="true" condensed="true" bordered="true"/>
                </g:north>
                <g:center size="100">
                    <g:DockLayoutPanel unit='PCT'>
                        <g:west size='50'>
                            <g:VerticalPanel width="100%">
                                <g:HorizontalPanel>
                                    <b:Heading size="4" text="Email : "/>
                                    <b:Heading size="4" ui:field="hEmail"/>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel>
                                    <b:Heading size="4" text="Surname : "/>
                                    <b:Heading size="4" ui:field="hSurname"/>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </g:west>
                        <g:east size='50'>
                            <g:HTML>Footer</g:HTML>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
